<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/nav_graph"
    app:startDestination="@id/mainMenuFragment">

    <fragment
        android:id="@+id/mainMenuFragment"
        android:name="edu.towson.cosc412.martindale.gymrat.fragments.MainMenuFragment"
        android:label="MainMenuFragment" >
        <action
            android:id="@+id/action_mainMenuFragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment" />
        <action
            android:id="@+id/action_mainMenuFragment_to_workoutMenuFragment"
            app:destination="@id/workoutMenuFragment" />
        <action
            android:id="@+id/action_mainMenuFragment_to_workoutDirectoryFragment"
            app:destination="@id/workoutDirectoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/userProfileFragment"
        android:name="edu.towson.cosc412.martindale.gymrat.fragments.UserProfileFragment"
        android:label="UserProfileFragment" >
        <action
            android:id="@+id/action_userProfileFragment_to_mainMenuFragment"
            app:destination="@id/mainMenuFragment" />
    </fragment>
    <fragment
        android:id="@+id/nextRecommendedWorkoutFragment"
        android:name="edu.towson.cosc412.martindale.gymrat.fragments.NextRecommendedWorkoutFragment"
        android:label="NextRecommendedWorkoutFragment" >
        <action
            android:id="@+id/action_nextRecommendedWorkoutFragment_to_mainMenuFragment"
            app:destination="@id/mainMenuFragment" />
    </fragment>
    <fragment
        android:id="@+id/previousWorkoutsFragment"
        android:name="edu.towson.cosc412.martindale.gymrat.fragments.PreviousWorkoutsFragment"
        android:label="PreviousWorkoutsFragment" >
        <action
            android:id="@+id/action_previousWorkoutsFragment_to_mainMenuFragment"
            app:destination="@id/mainMenuFragment" />
    </fragment>
    <fragment
        android:id="@+id/workoutDirectoryFragment"
        android:name="edu.towson.cosc412.martindale.gymrat.fragments.WorkoutDirectoryFragment"
        android:label="WorkoutDirectoryFragment" >
        <action
            android:id="@+id/action_workoutDirectoryFragment_to_mainMenuFragment"
            app:destination="@id/mainMenuFragment" />
    </fragment>
    <fragment
        android:id="@+id/workoutMenuFragment"
        android:name="edu.towson.cosc412.martindale.gymrat.fragments.WorkoutMenuFragment"
        android:label="WorkoutMenuFragment" >
        <action
            android:id="@+id/action_workoutMenuFragment_to_previousWorkoutsFragment"
            app:destination="@id/previousWorkoutsFragment" />
        <action
            android:id="@+id/action_workoutMenuFragment_to_nextRecommendedWorkoutFragment"
            app:destination="@id/nextRecommendedWorkoutFragment" />
        <action
            android:id="@+id/action_workoutMenuFragment_to_mainMenuFragment"
            app:destination="@id/mainMenuFragment" />
    </fragment>
</navigation>