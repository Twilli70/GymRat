<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainMenuFragment">

    <fragment
        android:id="@+id/mainMenuFragment"
        android:name="edu.towson.cosc412.martindale.gymrat.ui.fragments.MainMenuFragment"
        android:label="MainMenuFragment" >
        <action
            android:id="@+id/action_mainMenuFragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment" />
        <action
            android:id="@+id/action_mainMenuFragment_to_workoutMenuFragment"
            app:destination="@id/workoutMenuFragment" />
        <action
            android:id="@+id/action_mainMenuFragment_to_workoutDirectoryFragment"
            app:destination="@id/workoutDirectoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/userProfileFragment"
        android:name="edu.towson.cosc412.martindale.gymrat.ui.fragments.UserProfileFragment"
        android:label="UserProfileFragment" />
    <fragment
        android:id="@+id/nextRecommendedWorkoutFragment"
        android:name="edu.towson.cosc412.martindale.gymrat.ui.fragments.NextRecommendedWorkoutFragment"
        android:label="NextRecommendedWorkoutFragment" />
    <fragment
        android:id="@+id/WorkoutHistoryFragment"
        android:name="edu.towson.cosc412.martindale.gymrat.ui.fragments.WorkoutHistoryFragment"
        android:label="WorkoutHistoryFragment" />
    <fragment
        android:id="@+id/workoutDirectoryFragment"
        android:name="edu.towson.cosc412.martindale.gymrat.ui.fragments.WorkoutDirectoryFragment"
        android:label="WorkoutDirectoryFragment" />
    <fragment
        android:id="@+id/workoutMenuFragment"
        android:name="edu.towson.cosc412.martindale.gymrat.ui.fragments.WorkoutMenuFragment"
        android:label="WorkoutMenuFragment" >
        <action
            android:id="@+id/action_workoutMenuFragment_to_nextRecommendedWorkoutFragment"
            app:destination="@id/nextRecommendedWorkoutFragment" />
        <action
            android:id="@+id/action_workoutMenuFragment_to_routineCreationFragment"
            app:destination="@id/routineCreationFragment" />
        <action
            android:id="@+id/action_workoutMenuFragment_to_workoutSummaryFragment"
            app:destination="@id/workoutSummaryFragment" />
        <action
            android:id="@+id/action_workoutMenuFragment_to_workoutProgressFragment"
            app:destination="@id/workoutProgressFragment" />
        <action
            android:id="@+id/action_workoutMenuFragment_to_WorkoutHistoryFragment"
            app:destination="@id/WorkoutHistoryFragment" />
    </fragment>
    <activity
        android:id="@+id/mainActivity3"
        android:name="edu.towson.cosc412.martindale.gymrat.ui.activities.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/routineCreationFragment"
        android:name="edu.towson.cosc412.martindale.gymrat.ui.fragments.RoutineCreationFragment"
        android:label="RoutineCreationFragment" />
    <fragment
        android:id="@+id/workoutSummaryFragment"
        android:name="edu.towson.cosc412.martindale.gymrat.ui.fragments.WorkoutSummaryFragment"
        android:label="WorkoutSummaryFragment" />
    <fragment
        android:id="@+id/workoutProgressFragment"
        android:name="edu.towson.cosc412.martindale.gymrat.ui.fragments.WorkoutProgressFragment"
        android:label="WorkoutProgressFragment" />
</navigation>